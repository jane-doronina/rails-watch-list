<div class="banner">
  <div class="container">
    <h1 class="mb-5">All your favourite movies in just one place</h1>
    <button type="button" class="btn-pink-banner" data-bs-toggle="modal" data-bs-target="#newListModal">Create a new list</button>
  </div>
</div>

<%# MODAL %>

<div class="modal fade" id="newListModal" tabindex="-1" aria-labelledby="newListModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container">
          <h2 class="mt-2 mb-3">Let's create a new <span class="pink-font">movies list</span></h2>
          <%= simple_form_for @list do |f| %>
            <%= f.input :name %>
            <%= f.input :photo, as: :file %>
            <%= f.button :submit, class: "btn-pink btn-center" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%# LISTS %>

<div class="container mb-5">
  <h2 class="mt-5 mb-5 text-center">Discover your lists</h2>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-sm-12 col-md-6 col-lg-6">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, crop: :fill %>')">
          <h2><%= link_to list.name, list_path(list), class: "link-underline-effect" %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
